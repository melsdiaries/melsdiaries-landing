---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import PanelsFade from "../components/PanelsFade.astro";
import GallerySection from "../components/GallerySection.astro";
import CraftedWithCare from "../components/CraftedWithCare.astro";
import Testimonial from "../components/Testimonial.astro";
import Features from "../components/Features.astro";
import FAQ from "../components/FAQ.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Melsdiaries">
  <main>
    <Hero />
    <PanelsFade />
    <GallerySection />
    <CraftedWithCare />
    <Testimonial />
    <Features />
    <section class="py-24 bg-brand-cream text-center">
      <h2 class="text-4xl md:text-5xl font-serif mb-8 italic">
        Don't just Store Memories. Honor Them.
      </h2>
      <p class="text-brand-dark/70 max-w-2xl mx-auto mb-12 leading-relaxed">
        Turn your digital photos into a timeless keepsake that your family will
        treasure for generations. Start creating your story today.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button
          class="bg-brand-orange text-white px-8 py-3 rounded-md font-bold transition-transform hover:scale-105"
          >Begin your story today</button
        >
        <button
          class="border-2 border-brand-orange text-brand-orange px-8 py-3 rounded-md font-bold transition-all hover:bg-brand-orange hover:text-white"
          >View photobooks</button
        >
      </div>
    </section>
    <FAQ />
    <Footer />
  </main>
</Layout>
