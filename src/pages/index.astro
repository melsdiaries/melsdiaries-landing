---
import NavigationBar from "../components/NavigationBar.astro";
import MainLayout from "../layout/MainLayout.astro";
import { Upload, Pencil, Book, ArrowRight } from "@lucide/astro";
---

<MainLayout>
  <NavigationBar />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-20">
    <div
      class="mt-6 relative isolate overflow-hidden rounded-[2.5rem] bg-gray-900 shadow-2xl"
    >
      <img
        src="https://images.unsplash.com/photo-1544377193-33dcf4d68fb5?q=80&w=2000&auto=format&fit=crop"
        alt="Photo book background"
        class="absolute inset-0 -z-10 h-full w-full object-cover opacity-60"
      />

      <div
        class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900/90 via-gray-900/40 to-transparent"
      >
      </div>

      <div class="mx-auto max-w-2xl py-24 sm:py-32 text-center px-6">
        <h1
          class="text-4xl font-bold tracking-tight text-white sm:text-6xl text-balance drop-shadow-sm"
        >
          Your Memories, <br />
          <span class="text-orange-400">Beautifully Told.</span>
        </h1>
        <p class="mt-6 text-lg leading-8 text-gray-300 text-balance">
          Turn your digital gallery into a stunning, physical keepsake. Easily
          create custom photo books with your favorite stories.
        </p>
        <div class="mt-10 flex items-center justify-center gap-x-6">
          <button
            class="group bg-orange-500 text-white px-8 py-3.5 rounded-full hover:bg-orange-600 transition-all duration-300 font-semibold shadow-lg hover:shadow-orange-500/30 flex items-center gap-2"
          >
            Create Your Book
            <ArrowRight
              class="w-4 h-4 group-hover:translate-x-1 transition-transform"
            />
          </button>
        </div>
      </div>
    </div>

    <main class="mt-24">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2
          class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl text-balance"
        >
          Create Your Perfect Photo Book
        </h2>
        <p class="mt-4 text-lg text-gray-600">
          From your favorite moments to beautifully printed keepsake, our
          process is designed to be simple and enjoyable.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div
          class="group relative bg-white p-8 rounded-2xl shadow-sm ring-1 ring-gray-200 hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
        >
          <div
            class="h-12 w-12 rounded-xl bg-orange-100 text-orange-600 flex items-center justify-center mb-6 group-hover:bg-orange-600 group-hover:text-white transition-colors"
          >
            <Upload size={24} />
          </div>
          <h3 class="text-xl font-semibold text-gray-900">
            1. Upload with Ease
          </h3>
          <p class="mt-2 text-gray-600 leading-relaxed">
            Upload your favorite photos and videos from any device in just a few
            clicks.
          </p>
        </div>

        <div
          class="group relative bg-white p-8 rounded-2xl shadow-sm ring-1 ring-gray-200 hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
        >
          <div
            class="h-12 w-12 rounded-xl bg-orange-100 text-orange-600 flex items-center justify-center mb-6 group-hover:bg-orange-600 group-hover:text-white transition-colors"
          >
            <Pencil size={24} />
          </div>
          <h3 class="text-xl font-semibold text-gray-900">2. Add your Story</h3>
          <p class="mt-2 text-gray-600 leading-relaxed">
            Personalize every page with custom layouts, heartfelt captions, and
            beautiful typography.
          </p>
        </div>

        <div
          class="group relative bg-white p-8 rounded-2xl shadow-sm ring-1 ring-gray-200 hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
        >
          <div
            class="h-12 w-12 rounded-xl bg-orange-100 text-orange-600 flex items-center justify-center mb-6 group-hover:bg-orange-600 group-hover:text-white transition-colors"
          >
            <Book size={24} />
          </div>
          <h3 class="text-xl font-semibold text-gray-900">
            3. Order a Keepsake
          </h3>
          <p class="mt-2 text-gray-600 leading-relaxed">
            Receive a professionally printed, matte-finish photo book delivered
            right to your doorstep.
          </p>
        </div>
      </div>

      <div
        class="mt-32 bg-transparent rounded-3xl p-8 md:p-12 lg:p-16 text-center overflow-hidden relative"
      >
        <div
          class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-orange-200/20 rounded-full blur-3xl -z-10"
        >
        </div>

        <h2 class="text-3xl md:text-5xl font-bold tracking-tight text-gray-900">
          Simple, transparent pricing.
        </h2>
        <p class="mt-4 text-lg text-gray-600">
          No complicated tiers. You only pay for what you print.
        </p>

        <div
          class="mt-10 inline-block bg-white rounded-2xl shadow-sm border border-orange-100 p-8 max-w-lg w-full"
        >
          <p
            class="text-xs font-bold uppercase tracking-widest text-orange-600 mb-2"
          >
            Standard Rate
          </p>
          <div class="flex items-baseline justify-center gap-x-2">
            <span class="text-5xl font-bold tracking-tight text-gray-900"
              >$0.50</span
            >
            <span class="text-sm font-semibold leading-6 text-gray-500"
              >/ page</span
            >
          </div>
        </div>

        <div
          class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12 max-w-4xl mx-auto"
        >
          <div class="bg-white/60 p-6 rounded-xl border border-gray-100">
            <p class="font-semibold text-gray-900">Short Story</p>
            <p class="text-sm text-gray-500 mt-1">20 Pages</p>
            <p class="text-2xl font-bold text-gray-900 mt-2">$10.00</p>
          </div>

          <div
            class="bg-white p-6 rounded-xl border border-orange-200 shadow-md transform scale-105 relative"
          >
            <span
              class="absolute -top-3 left-1/2 -translate-x-1/2 bg-orange-600 text-white text-[10px] uppercase font-bold px-2 py-1 rounded-full tracking-wide"
              >Popular</span
            >
            <p class="font-semibold text-gray-900">Standard Book</p>
            <p class="text-sm text-gray-500 mt-1">40 Pages</p>
            <p class="text-2xl font-bold text-gray-900 mt-2">$20.00</p>
          </div>

          <div class="bg-white/60 p-6 rounded-xl border border-gray-100">
            <p class="font-semibold text-gray-900">Photo Album</p>
            <p class="text-sm text-gray-500 mt-1">60 Pages</p>
            <p class="text-2xl font-bold text-gray-900 mt-2">$30.00</p>
          </div>
        </div>

        <button
          class="mt-12 bg-gray-900 text-white px-10 py-3 rounded-full hover:bg-gray-800 transition font-medium text-lg shadow-lg"
        >
          Start Your Book
        </button>
        <p class="text-xs text-gray-400 mt-4">
          *Minimum order of 20 pages. Shipping excluded.
        </p>
      </div>
    </main>

    <footer class="mt-32 border-t border-gray-200 pt-16">
      <div class="flex flex-col md:flex-row justify-between items-center gap-6">
        <div class="flex gap-8 text-sm font-medium text-gray-600">
          <a
            href="mailto:melsdiaries@gmail.com"
            class="hover:text-orange-600 transition">Support</a
          >
          <a href="#" class="hover:text-orange-600 transition">FAQ</a>
          <a href="#" class="hover:text-orange-600 transition">Shipping</a>
        </div>
        <p class="text-sm text-gray-500">
          Â© {new Date().getFullYear()} Melsdiaries. All rights reserved.
        </p>
      </div>
    </footer>
  </div>
</MainLayout>
