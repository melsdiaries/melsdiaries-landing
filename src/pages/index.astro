---
import NavigationBar from "../components/NavigationBar.astro";
import OurStories from "../components/OurStories.astro";
import MainLayout from "../layout/MainLayout.astro";
import { Upload, Pencil, Book } from "@lucide/astro";
---

<MainLayout>
  <NavigationBar />
  <div class="mt-8">
    <div
      class="relative h-[400px] md:h-[500px] rounded-3xl overflow-hidden bg-linear-to-br from-amber-900 via-amber-800 to-amber-950 flex items-center justify-center"
    >
      <!-- Dark overlay for text readability -->
      <div class="absolute inset-0 bg-black/40"></div>

      <!-- Content -->
      <div class="relative z-10 text-center px-4 md:px-8 max-w-3xl">
        <h1
          class="text-3xl md:text-4xl lg:text-5xl font-semibold text-white mb-4"
        >
          Your Memories, Beautifully Told.
        </h1>
        <p class="text-base md:text-lg text-white/90 mb-8">
          Easily create stunning, custom photo books with your favorite pictures
          and stories.
        </p>
        <button
          class="bg-orange-500 text-white px-8 py-3 rounded-full hover:bg-orange-600 transition font-medium text-base md:text-lg"
        >
          Create Your Photo Book Now.
        </button>
      </div>
    </div>
  </div>
  <div class="mt-20">
    <main>
      <div class="flex flex-col gap-4 items-center mx-auto text-center">
        <p
          class="text-3xl md:text-4xl lg:text-5xl font-semibold w-full md:w-[85%] px-4"
        >
          Create Your Perfect Photo Book in Three Simple Steps
        </p>
        <p class="w-full md:w-[65%] text-base md:text-lg px-4">
          From your favorite moments to beautifully printed keepsake, our
          process is designed to be simple and enjoyable.
        </p>
      </div>
      <div
        class="mt-12 md:mt-16 grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6 [&>div]:border [&>div]:border-orange-200 [&>div]:p-6 [&>div]:rounded-lg"
      >
        <div>
          <Upload size="24" />
          <p class="mt-4 text-lg font-semibold">Upload with Ease</p>
          <p class="text-orange-700/85 text-base/5 mt-1">
            Easily gather your photos from your computer, phone, or social media
            accounts.
          </p>
        </div>
        <div>
          <Pencil size="24" />
          <p class="mt-4 text-lg font-semibold">Add your Story</p>
          <p class="text-orange-700/85 text-base/5 mt-1">
            Personalize every page with custom layouts, heartfelt captions, and
            beautiful typography to tell your unique story.
          </p>
        </div>
        <div>
          <Book size="24" />
          <p class="mt-4 text-lg font-semibold">Order a Keepsake</p>
          <p class="text-orange-700/85 text-base/5 mt-1">
            Order and recieve a professionally printed, high-quality photo book
            delivered right to your doorstep, ready to be cherished for years.
          </p>
        </div>
      </div>

      <div class="flex flex-col gap-4 items-center mx-auto text-center mt-16">
        <p class="text-4xl md:text-5xl font-semibold w-full md:w-[85%]">
          Simple, transparent pricing.
        </p>
        <p class="w-full md:w-[65%] text-base md:text-lg">
          No complicated tiers. You only pay for what you print.
        </p>

        <div class="mt-8 border border-orange-200 rounded-lg p-8 w-full">
          <p class="text-sm uppercase tracking-wide text-orange-600 mb-2">
            STANDARD RATE
          </p>
          <p class="text-4xl md:text-5xl font-semibold">
            $0.50 <span class="text-orange-400 text-lg font-normal">/ page</span
            >
          </p>
          <p class="mt-2 text-gray-600">
            Includes premium paper, professional binding, and a matte finish
            cover.
          </p>

          <!-- Pricing Tiers -->
          <div
            class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-8 text-center border-t border-amber-500/70"
          >
            <div class="p-6">
              <p class="text-lg font-semibold mb-2">Short Story</p>
              <p class="text-gray-600 mb-1">20 Pages</p>
              <p class="text-2xl font-semibold">
                $10.00 <span class="text-sm font-normal text-gray-500"
                  >total</span
                >
              </p>
            </div>
            <div class="p-6 bg-orange-50 rounded-lg">
              <p class="text-lg font-semibold mb-2">Standard Book</p>
              <p class="text-gray-600 mb-1">40 Pages</p>
              <p class="text-2xl font-semibold">
                $20.00 <span class="text-sm font-normal text-gray-500"
                  >total</span
                >
              </p>
            </div>
            <div class="p-6 rounded-lg">
              <p class="text-lg font-semibold mb-2">Photo Album</p>
              <p class="text-gray-600 mb-1">60 Pages</p>
              <p class="text-2xl font-semibold">
                $30.00 <span class="text-sm font-normal text-gray-500"
                  >total</span
                >
              </p>
            </div>
          </div>

          <button
            class="mt-8 bg-orange-500 text-white px-8 py-3 rounded-full hover:bg-orange-600 transition font-medium"
          >
            Start Your Book
          </button>

          <p class="text-xs text-gray-500 mt-4">
            *Minimum order of 20 pages required for binding stability.
          </p>
        </div>
      </div>
    </main>
  </div>
  <!-- <OurStories /> -->
  <footer class="mt-20 pt-12">
    <ul class="space-y-2 flex justify-around items-center text-center mb-6">
      <li>
        <a
          href="mailto:melsdiaries@gmail.com"
          class="text-gray-600 hover:text-orange-500 transition text-sm underline"
          >Support</a
        >
      </li>
      <li>
        <a
          href="#"
          class="text-gray-600 hover:text-orange-500 transition text-sm">FAQ</a
        >
      </li>
      <li>
        <a
          href="#"
          class="text-gray-600 hover:text-orange-500 transition text-sm"
          >Shipping</a
        >
      </li>
    </ul>
  </footer>

  <div class="text-center py-6 border-t border-orange-200">
    <p class="text-sm text-gray-500">
      Â© {new Date().getFullYear()} Melsdiaries. All rights reserved.
    </p>
  </div>
</MainLayout>
