---
import { cn } from "@/lib/utils";
import clsx from "clsx";

const cardImages = [
  "/hero-images/6.png",
  "/hero-images/7.png",
  "/hero-images/8.png",
];
---

<style>
  .card-stack {
    position: relative;
    width: 320px;
    height: 400px;
    perspective: 1000px;
  }

  .card {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
  }

  .card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Default stacked position */
  .card:nth-child(1) {
    transform: translateY(0) translateX(0) rotate(0deg);
    z-index: 3;
  }

  .card:nth-child(2) {
    transform: translateY(8px) translateX(4px) rotate(-2deg);
    z-index: 2;
  }

  .card:nth-child(3) {
    transform: translateY(16px) translateX(8px) rotate(2deg);
    z-index: 1;
  }

  /* Expanded position on hover */
  .card-stack:hover .card:nth-child(1) {
    transform: translateX(-240px) translateY(-20px) rotate(-8deg);
    z-index: 3;
  }

  .card-stack:hover .card:nth-child(2) {
    transform: translateX(0) translateY(-30px) rotate(0deg);
    z-index: 2;
  }

  .card-stack:hover .card:nth-child(3) {
    transform: translateX(240px) translateY(-20px) rotate(8deg);
    z-index: 1;
  }
</style>

<section class="pb-24 max-w-7xl mx-auto px-6">
  <div class="grid md:grid-cols-2 gap-16 items-center">
    <div class="space-y-6">
      <h2 class="text-4xl md:text-5xl font-serif leading-tight">
        This is Your Story,<br /> Immortalized.
      </h2>
      <p class="text-brand-dark/70 max-w-md leading-relaxed">
        Melsdiaries is the art of turning your digital moments into a tangible
        testament to your journey. For Families. Fore Friends. For Couples.
      </p>
    </div>

    <div class="flex items-center justify-center">
      <div class="card-stack">
        {
          cardImages.map((src, index) => (
            <div
              class={cn(
                "card",
                index === 0 && "rotate-10",
                index === 2 && "-rotate-12",
              )}
            >
              <img src={src} alt={`Memory ${index + 1}`} />
            </div>
          ))
        }
      </div>
    </div>
  </div>
  <div class="mt-16 w-full flex items-center justify-center">
    <button
      class="bg-brand-orange text-white px-8 py-3 rounded-md font-bold transition-transform hover:scale-105"
    >
      See all features
    </button>
  </div>
</section>
