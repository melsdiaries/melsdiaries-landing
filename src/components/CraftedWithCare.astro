    <div class="grid md:grid-cols-3 gap-8">
      {
        steps.map((step, index) => (
          <div class="bg-brand-beige rounded-2xl p-8 text-center">
            <div class="text-5xl mb-6">{step.icon}</div>
            <div class="inline-block bg-brand-orange text-white text-xs font-bold w-8 h-8 rounded-full items-center justify-center mb-4">
              <p class="flex items-center justify-center w-full h-full">
                {index + 1}
